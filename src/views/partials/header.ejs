<!-- views/partials/header.ejs -->
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <h1>
                Votist
            </h1>
            <% if(typeof username != 'undefined'){%>
                <h2>Welcome <%= username %>!</h2>
            <% } else { %>
                <h2><%= h2 %></h2>
            <% } %>
            <% 
                var btns;
                if(isLoggedIn == undefined){
                    btns = buttons.loggedOut;
                } else {
                    btns = buttons.loggedIn;
                }
            %>
            <% btns.forEach(function(btn,i){ 
                let className;
                if(i == 0) className = 'btn-success';
                else className = 'btn-primary';
            %>
                <a href="<%= btn.path %>">
                    <button class="btn <%= className %> btn-lg btn-custom"><%= btn.name %></button>
                </a>
            
            <% }) %>
<!--
            <a href="/view-polls">
                <button class="btn btn-default btn-danger btn-lg btn-custom"> Vote now </button>
            </a>
-->
        </div>
    </div>
</div>