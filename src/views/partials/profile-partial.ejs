<div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
        <h1>New Poll</h1>
        <form id="add-poll" name="add-poll" method="post" action="profile/add-poll">
            <div class="form-group">
                <label for="exampleInputEmail1">Poll Name</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="What is your favourite programming language?" name="title"> </div>
            <div class="form-group">
                <label for="option1">Option 1</label>
                <input type="text" class="form-control" id="option1" placeholder="Javascript" name="option1"> </div>
            <div class="form-group">
                <label for="option2">Option 2</label>
                <input type="text" class="form-control" id="option2" placeholder="Python" name="option2"> </div>
            <div class="form-group">
                <label for="option3">Option 3</label>
                <input type="text" class="form-control" id="option3" placeholder="C#" name="option3">
            </div>
            <button class="btn btn-default btn-primary btn form-btn add-poll-btn">Add new option</button>
            <button type="submit" class="btn btn-default btn-success form-btn">Create poll</button>
        </form>
    </div>
</div>